<Window x:Class="LR5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LR5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Orientation="Vertical">
            <Label FontSize="18">C0:</Label>
            <TextBox x:Name="TextBox_C0" FontSize="18" Margin="5" TextChanged="OnTextChanged"></TextBox>
            <Label FontSize="18">C1:</Label>
            <TextBox x:Name="TextBox_C1" FontSize="18" Margin="5" TextChanged="OnTextChanged"></TextBox>
            <Label FontSize="18">C2:</Label>
            <TextBox x:Name="TextBox_C2" FontSize="18" Margin="5" TextChanged="OnTextChanged"></TextBox>
        </StackPanel>

        <StackPanel Grid.Column="1" Orientation="Vertical">
            <Label FontSize="18">Result:</Label>
            <Label x:Name="Label_Result" FontSize="18"></Label>
        </StackPanel>
    </Grid>
</Window>
